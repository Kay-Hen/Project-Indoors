<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".Share_Activity">


    <EditText
        android:id="@+id/txt_phone_number"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_marginTop="10dp"
        android:hint="Enter Receipient Number"
        android:gravity="center"
        android:inputType="phone"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/rt_beginning"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:hint="Message Subject"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/rt_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:hint="Enter your Current location and Destination"
        android:textSize="22sp" />

    <Button
        android:id="@+id/rt_Send"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="70dp"
        android:backgroundTint="#FF0000"
        android:onClick="btn_send"
        android:text="send"
        android:textSize="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="76dp"
        android:layout_gravity="bottom|right"
        android:backgroundTint="@color/mapboxWhite"
        android:drawableTop="@drawable/ic_baseline_close_24"
        android:onClick="Close" />


</LinearLayout>